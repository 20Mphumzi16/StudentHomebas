{"ast":null,"code":"export default {\n  name: \"HeaderComponent\",\n  data() {\n    return {\n      isDropdownVisible: false\n    };\n  },\n  methods: {\n    toggleDropdown() {\n      this.isDropdownVisible = !this.isDropdownVisible;\n    },\n    handleOutsideClick(event) {\n      const profileElement = this.$refs.userProfile;\n      if (profileElement && !profileElement.contains(event.target)) {\n        this.isDropdownVisible = false;\n      }\n    }\n  },\n  watch: {\n    isDropdownVisible(newValue) {\n      if (newValue) {\n        document.addEventListener('click', this.handleOutsideClick);\n      } else {\n        document.removeEventListener('click', this.handleOutsideClick);\n      }\n    }\n  },\n  beforeDestroy() {\n    // Clean up event listener when the component is destroyed\n    document.removeEventListener('click', this.handleOutsideClick);\n  }\n};","map":{"version":3,"names":["name","data","isDropdownVisible","methods","toggleDropdown","handleOutsideClick","event","profileElement","$refs","userProfile","contains","target","watch","newValue","document","addEventListener","removeEventListener","beforeDestroy"],"sources":["C:\\Users\\User\\Documents\\IntelliJ Projects 2024\\StudentHomebas\\src\\frontend\\src\\components\\HeaderComponent.vue"],"sourcesContent":["<template>\r\n  <header class=\"header\">\r\n    <div class=\"logo\">\r\n      <router-link to=\"/\"><img src=\"@/assets/logo.jpg\" alt=\"StudentSpaceSolutions\"/></router-link>\r\n    </div>\r\n    <nav class=\"nav\">\r\n      <ul>\r\n        <li>\r\n          <router-link to=\"/\">Home</router-link>\r\n        </li>\r\n        <li><a href=\"#\">Student Accommodation</a></li>\r\n        <li>\r\n          <router-link to=\"/contact\">Contact Us</router-link>\r\n        </li>\r\n        <li><a href=\"#\">Becoming a landlord</a></li>\r\n        <li><a href=\"#\">FAQ</a></li>\r\n      </ul>\r\n    </nav>\r\n    <div class=\"user-profile\" ref=\"userProfile\" @click=\"toggleDropdown\">\r\n      <img src=\"@/assets/me.jpg\" alt=\"User\"/>\r\n      <span>Me</span>\r\n      <div v-if=\"isDropdownVisible\" class=\"dropdown-menu\">\r\n        <ul>\r\n          <li><a href=\"#\">Inbox</a></li>\r\n          <li><a href=\"#\">Account</a></li>\r\n          <li><a href=\"#\">Favourites</a></li>\r\n          <li><a href=\"#\">Logout</a></li>\r\n        </ul>\r\n      </div>\r\n    </div>\r\n  </header>\r\n</template>\r\n\r\n\r\n\r\n<script>\r\nexport default {\r\n  name: \"HeaderComponent\",\r\n  data() {\r\n    return {\r\n      isDropdownVisible: false\r\n    };\r\n  },\r\n  methods: {\r\n    toggleDropdown() {\r\n      this.isDropdownVisible = !this.isDropdownVisible;\r\n    },\r\n    handleOutsideClick(event) {\r\n      const profileElement = this.$refs.userProfile;\r\n      if (profileElement && !profileElement.contains(event.target)) {\r\n        this.isDropdownVisible = false;\r\n      }\r\n    }\r\n  },\r\n  watch: {\r\n    isDropdownVisible(newValue) {\r\n      if (newValue) {\r\n        document.addEventListener('click', this.handleOutsideClick);\r\n      } else {\r\n        document.removeEventListener('click', this.handleOutsideClick);\r\n      }\r\n    }\r\n  },\r\n  beforeDestroy() {\r\n    // Clean up event listener when the component is destroyed\r\n    document.removeEventListener('click', this.handleOutsideClick);\r\n  }\r\n};\r\n</script>\r\n\r\n<style scoped>\r\n.header {\r\n  display: flex;\r\n  justify-content: space-between;\r\n  align-items: center;\r\n  padding: 10px 20px;\r\n  background-color: white;\r\n}\r\n\r\n.logo img {\r\n  width: 200px;\r\n}\r\n\r\n.nav ul {\r\n  display: flex;\r\n  list-style-type: none;\r\n  padding: 0;\r\n}\r\n\r\n.nav li {\r\n  margin-right: 20px;\r\n}\r\n\r\n.nav a {\r\n  text-decoration: none;\r\n  color: #333;\r\n  font-size: 16px;\r\n}\r\n\r\n.nav a:hover {\r\n  color: #00796b;\r\n}\r\n\r\n.user-profile {\r\n  display: flex;\r\n  align-items: center;\r\n  position: relative;\r\n  cursor: pointer;\r\n}\r\n\r\n.user-profile img {\r\n  border-radius: 50%;\r\n  width: 40px;\r\n  height: 40px;\r\n  margin-right: 10px;\r\n}\r\n\r\n.user-profile span {\r\n  font-size: 16px;\r\n  font-weight: bold;\r\n}\r\n\r\n.dropdown-menu {\r\n  position: absolute;\r\n  top: 100%;\r\n  right: 0;\r\n  background-color: white;\r\n  border: 1px solid #ddd;\r\n  border-radius: 4px;\r\n  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);\r\n  width: 300px;\r\n  z-index: 1000;\r\n}\r\n\r\n.dropdown-menu ul {\r\n  list-style-type: none;\r\n  padding: 0;\r\n  margin: 0;\r\n}\r\n\r\n.dropdown-menu li {\r\n  border-bottom: 1px solid #ddd;\r\n}\r\n\r\n.dropdown-menu li:last-child {\r\n  border-bottom: none;\r\n}\r\n\r\n.dropdown-menu a {\r\n  display: block;\r\n  padding: 14px;\r\n  text-decoration: none;\r\n  color: #333;\r\n}\r\n\r\n.dropdown-menu a:hover {\r\n  background-color: #f0f0f0;\r\n  color: #00796b;\r\n}\r\n</style>\r\n"],"mappings":"AAoCA,eAAe;EACbA,IAAI,EAAE,iBAAiB;EACvBC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,iBAAiB,EAAE;IACrB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,cAAcA,CAAA,EAAG;MACf,IAAI,CAACF,iBAAgB,GAAI,CAAC,IAAI,CAACA,iBAAiB;IAClD,CAAC;IACDG,kBAAkBA,CAACC,KAAK,EAAE;MACxB,MAAMC,cAAa,GAAI,IAAI,CAACC,KAAK,CAACC,WAAW;MAC7C,IAAIF,cAAa,IAAK,CAACA,cAAc,CAACG,QAAQ,CAACJ,KAAK,CAACK,MAAM,CAAC,EAAE;QAC5D,IAAI,CAACT,iBAAgB,GAAI,KAAK;MAChC;IACF;EACF,CAAC;EACDU,KAAK,EAAE;IACLV,iBAAiBA,CAACW,QAAQ,EAAE;MAC1B,IAAIA,QAAQ,EAAE;QACZC,QAAQ,CAACC,gBAAgB,CAAC,OAAO,EAAE,IAAI,CAACV,kBAAkB,CAAC;MAC7D,OAAO;QACLS,QAAQ,CAACE,mBAAmB,CAAC,OAAO,EAAE,IAAI,CAACX,kBAAkB,CAAC;MAChE;IACF;EACF,CAAC;EACDY,aAAaA,CAAA,EAAG;IACd;IACAH,QAAQ,CAACE,mBAAmB,CAAC,OAAO,EAAE,IAAI,CAACX,kBAAkB,CAAC;EAChE;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}